@model TravelAgencySystem.Models.TourGuideEntity
@{
    ViewData["Title"] = "AddTourGuide";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddTourGuide</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveTourGuide">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input type="hidden" asp-for="GuideId" />
                <label asp-for="GuideName" class="control-label"></label>
                <input asp-for="GuideName" class="form-control" />
                <span asp-validation-for="GuideName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GuideEmail" class="control-label"></label>
                <input asp-for="GuideEmail" class="form-control" />
                <span asp-validation-for="GuideEmail" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="GuidePhoneNumber" class="control-label"></label>
                <input asp-for="GuidePhoneNumber" class="form-control" />
                <span asp-validation-for="GuidePhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LanguagesSpoken" class="control-label"></label>
                <input asp-for="LanguagesSpoken" class="form-control" />
                <span asp-validation-for="LanguagesSpoken" class="text-danger"></span>
            </div> 

            <div class="form-group">
                <label asp-for="GuideBio" class="control-label"></label>
                <input asp-for="GuideBio" class="form-control" />
                <span asp-validation-for="GuideBio" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="TourGuideList " class="btn btn-outline-success">TourGuide List</a>
            </div>
        </form>
    </div>
</div>



