@model IEnumerable<TravelAgencySystem.Models.CustomerEntity>
@{
    ViewData["Title"] = "CustomerList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CustomerList</h1>

<hr />

<p class="float-left">
    <a asp-action="AddCustomer" asp-controller="Customer" class="btn btn-outline-secondary">Add Customer</a>
</p>

<p class="float-right">
    @* <a asp-action="AddCustomer" asp-controller="Item" class="btn btn-outline-secondary">Add Customer</a> |*@
    @*<a asp-action="List" class="btn btn-outline-primary">Item List</a> |
    <a asp-action="DepartmentList" asp-controller="Item" class="btn btn-outline-primary">Category List</a>*@
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.CustName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustPhoneNumber)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.CustEmail)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.CustAddress)
            </th>

           



            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustPhoneNumber)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CustEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustAddress)
                </td>
              

                <td>
                    @Html.ActionLink("Update", "AddCustomer", new {  item.CustId, item.CustName, item.CustPhoneNumber, item.CustEmail, item.CustAddress } , new { @class="btn btn-outline-success rounded-pill"}) |
                    @Html.ActionLink("Delete", "DeleteCustomer", new {  item.CustId  }, new { @class = "btn btn-outline-danger rounded-pill",onclick="return confirm('Do you really want this record?')" })
                </td>

            </tr>
        }
    </tbody>
</table>

