@model TravelAgencySystem.Models.CustomerEntity
@{
    ViewData["Title"] = "AddCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddCustomer</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveCustomer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input type="hidden" asp-for="CustId" />
                <label asp-for="CustName" class="control-label"></label>
                <input asp-for="CustName" class="form-control" />
                <span asp-validation-for="CustName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CustPhoneNumber" class="control-label"></label>
                <input asp-for="CustPhoneNumber" class="form-control" />
                <span asp-validation-for="CustPhoneNumber" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="CustEmail" class="control-label"></label>
                <input asp-for="CustEmail" class="form-control" />
                <span asp-validation-for="CustEmail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CustAddress" class="control-label"></label>
                <input asp-for="CustAddress" class="form-control" />
                <span asp-validation-for="CustAddress" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="CustomerList" class="btn btn-outline-success">Customer List</a>
            </div>
        </form>
    </div>
</div>


