@model IEnumerable<TravelAgencySystem.Models.HotelBookingEntity>
@{
    ViewData["Title"] = "HotelBookingList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>HotelBookingList</h1>


<hr />

<p class="float-left">
    <a asp-action="AddHotelBooking" asp-controller="HotelBooking" class="btn btn-outline-secondary">Add HotelBooking</a>
</p>

<p class="float-right">
    @* <a asp-action="AddCustomer" asp-controller="Item" class="btn btn-outline-secondary">Add Customer</a> |*@
    @*<a asp-action="List" class="btn btn-outline-primary">Item List</a> |
    <a asp-action="DepartmentList" asp-controller="Item" class="btn btn-outline-primary">Category List</a>*@
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.HotelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckInDate)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.CheckOutDate)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.RoomType)
            </th>

            
            <th>
                @Html.DisplayNameFor(model => model.RoomRate)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.CustId)
            </th>

            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HotelName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CheckInDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CheckOutDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomType)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.RoomRate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CustId)
                </td>


                <td>
                    @Html.ActionLink("Update", "AddHotelBooking", new {  item.HotelId, item.HotelName, item.CheckInDate, item.CheckOutDate, item.RoomType , item.RoomRate , item.CustId } , new { @class="btn btn-outline-success rounded-pill"}) |
                    @Html.ActionLink("Delete", "DeleteHotelBooking", new {  item.HotelId  }, new { @class = "btn btn-outline-danger rounded-pill",onclick="return confirm('Do you really want this record?')" })
                </td>

            </tr>
        }
    </tbody>
</table>

